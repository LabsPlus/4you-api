
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id         Int      @id @default(autoincrement())
  name       String   @db.Char(50)
  email      String   @unique @db.Char(50)
  whatsapp   String   @db.Char(50)
  taxid      String   @db.Char(50)
  birth_date DateTime
  status     String   @db.Char(2)

  friends    Friend[] 
  payment    Payment[]
}

model Friend {
  id         Int      @id @default(autoincrement())
  customer_id Int
  birth_date DateTime
  name       String   @db.Char(50)
  whatsapp   String   @db.Char(50)
  email      String   @db.Char(50)

  customer   Customer @relation(fields: [customer_id], references: [id])
}

model Payment {
  customer_id Int 
  payment_date DateTime
  payment_method String @db.Char(50)
  payment_status String @db.Char(50)
  payer_email String @unique @db.Char(50)
  payer_phone String @db.Char(50)
  payer_taxid String @db.Char(50)
  payer_description String @db.Char(50)
  payer String @db.Char(50)

  customer   Customer @relation(fields: [customer_id], references: [id])
}



